<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LightTheme" parent="Base.AppTheme.Light" />

    <style name="Base.AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorSecondary">@color/black</item>
    </style>

    <style name="DarkTheme" parent="Base.AppTheme.Dark" />

    <style name="Base.AppTheme.Dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorSecondary">@color/white</item>
    </style>

    <style name="BlackButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:height">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/black_button_selector_rounded</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="RoundedBaseTipBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/RoundedBottomSheet</item>
    </style>

    <style name="RoundedBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/universal_rounded_bottom_sheet</item>
    </style>


</resources>